<h1>New admission</h1>

<% form_for(@admission) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :account_id, :value => params[:account_id] %>

  <p>
    <%= f.label :start_date %><br />
    <%= f.datetime_select :start_date %>
  </p>
  <p>
    <%= f.label :end_date %><br />
    <%= f.datetime_select :end_date %>
  </p>
  <p>
    <% wards_types_array = WardType.all.map { |ward_type| [ward_type.ward_type, ward_type.id] } %>
	<%= options_for_select(wards_types_array) %>
	<%= f.select(:ward_type, options_for_select(wards_types_array)) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admissions_path %>