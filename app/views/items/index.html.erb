<h1>Listing items</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Product type</th>
    <th>Original price</th>
    <th>Final price</th>
    <th>Is paid</th>
    <th>Rule</th>
    <th>Account ID</th>
    <th>Payment ID</th>

  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.product_id %></td>
    <td><%=h item.product_type %></td>
    <td><%=h item.original_price %></td>
    <td><%=h item.final_price %></td>
    <td><%=h item.is_paid %></td>
    <td><%=h item.rule_id %></td>
    <td><%=h item.account_id %></td> 
    <td><%=h item.payment_id %></td>

    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

