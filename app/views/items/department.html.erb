<html>
	<head>
        <script type="text/javascript" language="javascript" src="lib/javascripts/touchScreenToolkit.js" defer  ></script>

	</head>
	<body>
		<div id='content'>
			<table cellpadding=10>
				<tr><td>
				<h1>New item</h1>
				
				
				
				<% form_for(@item) do |f| %>
				  <%= f.error_messages %>
				  
				  
				  <%= f.hidden_field :account_id, :value => params[:account_id] %>
				  
				  <p>
					<%= f.label :department %><br />
					<%  departments_array = Department.all.map { |department| [department.name, department.name] } %>
					<%= options_for_select(departments_array) %>
					<%= f.select(@de, options_for_select(departments_array)) %>
				  </p>

				  
				  <p>
					<%= f.submit 'Create' %>
				  </p>
				<% end %>
				
				<%= link_to 'Back', items_path %>
				</td></tr>
		</div>
	</body>
</html>
