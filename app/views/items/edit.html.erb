<h1>Editing item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :product_id %><br />
    <%= f.text_field :product_id %>
  </p>
  <p>
    <%= f.label :product_type %><br />
    <%= f.text_field :product_type %>
  </p>
  <p>
    <%= f.label :original_price %><br />
    <%= f.text_field :original_price %>
  </p>
  <p>
    <%= f.label :final_price %><br />
    <%= f.text_field :final_price %>
  </p>
  <p>
    <%= f.label :is_paid %><br />
    <%= f.check_box :is_paid %>
  </p>
  <p>
    <%= f.label :rule_id %><br />
    <%= f.text_field :rule_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

