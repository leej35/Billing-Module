<p><b>Pay Summary</b></p>

<table>
  <tr>
    <th>Product ID</th>
    <th>Final Price</th>
    <th>Rule</th>
  </tr>
<% items_array =[] %>
<% @items.each do |item| %>

  <% if @items.any? %>
    <% items_array << item.id %>
    <tr>
      <td><%=h item.product_id %></td>
      <td><%=h item.final_price %></td>
      <td><%=h item.rule_id %></td>
    
    
      <td><%= link_to 'Show', item %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>

  <% else %>
    No Purchased Item yet.
  
  <% end %>  
<% end %>
</table>
<%= link_to 'Check out', :controller => :payments, :action => :new , :confirm => 'Are you sure?', :items => items_array %>

