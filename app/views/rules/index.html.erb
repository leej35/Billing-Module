<h1>Listing rules</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Rate</th>
    <th>Medical scheme</th>
    <th>Product</th>
    <th>Product type</th>
  </tr>

<% @rules.each do |rule| %>
  <tr>
    <td><%=h rule.name %></td>
    <td><%=h rule.rate %></td>
    <td><%=h rule.medical_scheme_id %></td>
    <td><%=h rule.product_id %></td>
    <td><%=h rule.product_type %></td>
    <td><%= link_to 'Show', rule %></td>
    <td><%= link_to 'Edit', edit_rule_path(rule) %></td>
    <td><%= link_to 'Destroy', rule, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New rule', new_rule_path %>