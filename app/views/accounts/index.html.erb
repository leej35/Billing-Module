<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Sex</th>
    <th>Age</th>
    <th>Patient ID</th>
    <th>Balance</th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%=h PatientService.get_patient(Patient.find(account.patient_id).person).name %></td>
    <td><%=h PatientService.get_patient(Patient.find(account.patient_id).person).sex %></td>
    <td><%=h PatientService.get_patient(Patient.find(account.patient_id).person).age %></td>
    <td><%=h account.patient_id %></td>
    <td><%=h account.balance %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New account', new_account_path %>